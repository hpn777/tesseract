{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "tests/dist",
    "rootDir": "./",
    "types": ["node", "tape"],
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true
  },
  "include": [
    "tests/**/*.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "docker",
    "tests/dist",
    "tests/**/*.js"
  ]
}
